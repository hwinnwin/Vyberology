<?xml version="1.0" encoding="utf-8"?>
<!-- Large Widget (4x4) - Full Dashboard -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Left: Branding + Time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <!-- Vyberology Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vyberology"
                android:textColor="#A58CFA"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif" />

            <!-- Time -->
            <TextView
                android:id="@+id/widget_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:11"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Right: Capture Button -->
        <View
            android:id="@+id/widget_capture_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/widget_capture_circle" />

        <!-- Capture Icon Overlay -->
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="⚡"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </RelativeLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="#33FFFFFF" />

    <!-- Universe Signals Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universe Signals"
        android:textColor="#CCFFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Pattern Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="1">

        <!-- Pattern 1: 11:11 -->
        <TextView
            android:id="@+id/widget_pattern_1111"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/widget_pattern_button"
            android:gravity="center"
            android:text="11:11"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Pattern 2: 222 -->
        <TextView
            android:id="@+id/widget_pattern_222"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/widget_pattern_button"
            android:gravity="center"
            android:text="222"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Pattern 3: 333 -->
        <TextView
            android:id="@+id/widget_pattern_333"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/widget_pattern_button"
            android:gravity="center"
            android:text="333"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Pattern 4: 444 -->
        <TextView
            android:id="@+id/widget_pattern_444"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/widget_pattern_button"
            android:gravity="center"
            android:text="444"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </GridLayout>

    <!-- Footer Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <!-- History Button -->
        <LinearLayout
            android:id="@+id/widget_history_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🕐"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="History"
                android:textColor="#CCFFFFFF"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Numerology Button -->
        <LinearLayout
            android:id="@+id/widget_numerology_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔢"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Numerology"
                android:textColor="#CCFFFFFF"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
