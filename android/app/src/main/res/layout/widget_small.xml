<?xml version="1.0" encoding="utf-8"?>
<!-- Small Widget (2x2) - Quick Capture -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Time Display -->
    <TextView
        android:id="@+id/widget_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="11:11"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <!-- Vybe Logo Circle -->
    <View
        android:id="@+id/widget_logo_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/widget_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/widget_logo_circle" />

    <!-- Logo Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="V"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Capture Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_logo_circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Tap to Capture"
        android:textColor="#B3FFFFFF"
        android:textSize="10sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Invisible capture button (whole widget is clickable) -->
    <View
        android:id="@+id/widget_capture_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

</RelativeLayout>
