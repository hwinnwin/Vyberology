{
  "name": "vybe-mono",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18 <23"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@eslint/js": "^9.37.0",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "eslint": "^9.37.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.15.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.1"
  },
  "overrides": {
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5"
  },
  "scripts": {
    "preflight": "(corepack enable || corepack enable --install-directory \"$HOME/.local/bin\") && corepack prepare pnpm@9.15.4 --activate",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "pnpm -r exec eslint --ignore-pattern coverage --ignore-pattern dist --ignore-pattern build --ignore-pattern .aegis_audit .",
    "typecheck": "pnpm -r exec tsc --noEmit --pretty false",
    "test": "pnpm --filter vite_react_shadcn_ts test -- --run --coverage",
    "ci:coverage:read": "node scripts/ci/read-coverage.js",
    "audit:diff": "git diff --name-only origin/main...HEAD > .aegis_audit/diff_files.txt",
    "audit:checkpoint": "node scripts/audit-checkpoint.mjs",
    "audit:hash": "node scripts/hash-artifacts.mjs > .aegis_audit/checksums.json",
    "perf:k6": "k6 run perf/k6-reading.js --out json=perf/k6-raw.json",
    "audit:collect": "mv perf/k6-summary.json .aegis_audit/k6-summary.json || true && node scripts/hash-artifacts.mjs > .aegis_audit/checksums.json",
    "docker:pin": "node scripts/pin-docker-digests.mjs && bash scripts/verify-image-digests.sh"
  },
  "packageManager": "pnpm@9.15.4"
}
